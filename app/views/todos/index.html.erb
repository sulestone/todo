<div class="page-header">
  <%= link_to new_todo_path, class: 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-plus"></span>
    New Todo
  <% end %>
  <h1>Here are your TODOs</h1>
</div>

<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
        <th>Title</th>
        <th>Completed</th>
        <th>Show</th>
        <th>Edit</th>
        <th>Destroy</th>
      </tr>
    </thead>

    <tbody>
      <%= content_tag_for(:tr, @todos) do |todo| %>
            <td><%= todo.title %></td>

            <% if todo.completed %>
            <!-- <td><span class="glyphicon glyphicon-ok"></span></td> -->
            <td><%= link_to 'UnComplete', "/todos/#{todo.id}/uncomplete" %></td>
            <% else %>
            <td><%= link_to 'Complete', "/todos/#{todo.id}/complete" %></td>
            <td></td>
            <% end %>

            <td><%= link_to 'Show', todo %></td>
            <td><%= link_to 'Edit', edit_todo_path(todo) %></td>
            <td><%= link_to 'Destroy', todo, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      <% end %>
    </tbody>
  </table>
</div>
